    "access": "public"
  },
  "devDependencies": {
    "autoprefixer": "10.1.0",
    "cssnano": "4.1.10",
    "http-server": "0.12.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.0",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.2"
  }
}
