{
  "name": "cupid-ui",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "css",
    "react"
  ],
  "author": "The Lunar Design Team <npm@lunardesign.org>",
  "license": "MIT",
  "devDependencies": {
    "tsdx": "0.14.1",
    "tslib": "2.3.0",
    "typescript": "4.3.5"
  },
  "scripts": {
    "playground": "yarn workspace @cupid-ui/css playground",
    "docs:build": "cd docs/ && zola build && cd ..",
    "docs:watch": "cd docs/ && zola serve && cd ..",
    "build:css": "yarn workspace @cupid-ui/css build",
    "build:react": "yarn workspace @cupid-ui/react build",
    "build:all": "yarn build:css && yarn build:react",
    "test:css": "yarn workspace @cupid-ui/css test",
    "test:react": "yarn workspace @cupid-ui/react test",
    "test:all": "yarn run test:css && yarn run test:react",
    "test": "yarn run test:all"
  }
}
