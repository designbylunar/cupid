{
  "name": "ui-framework",
  "version": "0.1.0",
  "description": "A modern framework for building responive frontends",
  "keywords": [
    "css",
    "design",
    "postcss",
    "modern",
    "ui",
    "framework"
  ],
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "homepage": "https://lunardesign.org/projects/ui-framework",
  "repository": "https://github.com/designbylunar/ui-framework.git",
  "bugs": "https://github.com/designbylunar/ui-framework/issues/new",
  "author": "The Lunar Design Team <npm@lunardesign.org>",
  "license": "MIT",
  "scripts": {
    "react": "yarn workspace @ui-framework/react",
    "shared": "yarn workpsace @ui-framework/shared",
    "build": "yarn workspaces run build",
    "test": "./scripts/test.sh",
    "lint": "./scripts/lint.sh"
  },
  "private": true,
  "devDependencies": {
    "autoprefixer": "10.1.0",
    "cssnano": "4.1.10",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "postcss": "8.2.10",
    "postcss-cli": "8.3.1",
    "postcss-each": "1.0.0",
    "postcss-import": "14.0.2",
    "postcss-nested": "5.0.5",
    "postcss-preset-env": "6.7.0",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  }
}
